#!/bin/bash
if [ "$#" -ne 1 ] 
then echo "needs an argument";
    exit 1
fi

CIL_TMP_DIR="$1_dir"
if [ ! -e $CIL_TMP_DIR ]; then
    echo "$CIL_TMP_DIR is missing";
    exit 1
fi

OPTS=
if [ -r "opts" ]; then
    OPTS=`cat opts`
fi
cd $1_dir
$VERMEER_PATH/cil-1.7.3/bin/cilly --dodsnsnaps --save-temps $OPTS "$1.ssa.c"

if [ "$?" -ne "0" -o ! -x ./a.out ]; then exit 1; fi
./a.out
mv dsn_logfile.txt "$1.ssa.snaps.c"
